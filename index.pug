include inc/mixins
doctype
html(lang='en')
  head
    include inc/styles
    title Home
  body
    +header('Home')
    .searchbox.mt-3.d-flex.container
      input(type='search',placeholder='Search')
      div(data-bs-toggle="collapse" href="#options" role="button") #[i(class='fa-solid fa-filter')]
    .container
      +options-container
      div(class="carousel slide mt-4 mb-4" id="carouselExampleIndicators" data-bs-ride="true")
        div( class="carousel-indicators")
          button(type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1")
          button(type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2")
          button("button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3")
        div(class="carousel-inner")
          div(class="carousel-item active")
            img(src="imgs/banner/banner-1.jpg" width='200' height='220' class="d-block w-100")
          div(class="carousel-item")
            img(src="imgs/banner/banner-2.jpg" width='200' height='220' class="d-block w-100")
          div(class="carousel-item")
            img(src="imgs/banner/banner-3.jpg" width='200' height='220' class="d-block w-100")
      //-End Carousel

      block categories
        include inc/categories
      block products
        div.d-flex.justify-content-between.mt-5
          h3 Popular
          span #[a.nav-link View All]
        include inc/products
        div.text-center #[.btn.main-btn Load More]

    include inc/navigator
    include inc/scripts
